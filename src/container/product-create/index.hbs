<main>
  <section>
    <div class='form'>
      <h1 class='form__title'>Інформація про товар</h1>
      <form method='POST' action='/product-create'>
        <div class='form__content'>
          <div class='form__block'>
            <div class='form__field'>
              <label for='name' class='form-label'>Назва
                товару</label>
              <input
                type='text'
                name='name'
                class='form-control'
              />
            </div>
            <div class='form__field'>
              <label
                for='price'
                class='form-label'
              >Ціна</label>
              <input
                type='number'
                name='price'
                step='0.01'
                min='0'
                class='form-control'
              />
            </div>
          </div>
          <div class='form__field'>
            <label
              for='description'
              class='form-label'
            >Короткий опис товару</label>
            <input
              type='text'
              name='description'
              class='form-control'
            />
          </div>
          <div class='form__coment'>Відображається у картці
            товару</div>
          <button class='form__button'>Створити товар</button>
        </div>
      </form>
    </div>
  </section>
</main>

