<main class="main">
{{#with data}}
    <div class="main__content">
        <h1 class="title title--center">Додати до плейліста</h1>
        <ul class="track__list">
        {{#each list}}
            <li class="track">
                <img src="{{image}}" alt="{{name}}" class="track__image">
                <div class="track__content">
                    <strong class="track__name">{{name}}</strong>
                    <em class="track__uathor">{{author}}</em>
                </div>
                <a href="/spotify-track-add?playlistId={{../playlistId}}&trackId={{id}}" class="track__icon">
                    <img src="/svg/add_round_button.svg">
                </a>
            </li>
        {{/each}}
        </ul>
    </div>
{{/with}}
</main>
